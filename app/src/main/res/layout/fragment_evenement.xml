<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Présentation.Vue.VueEvenement">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">


                        <Button
                            android:id="@+id/buttonVersProfil"
                            android:layout_width="61dp"
                            android:layout_height="57dp"
                            android:layout_marginStart="8dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/menu_hamburger"
                            android:text="" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="140dp"
                            android:layout_height="41dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="76dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="62dp"
                            android:layout_marginBottom="19dp"
                            android:layout_toStartOf="@+id/bouttonVersCréer"
                            android:layout_toEndOf="@+id/buttonVersProfil"
                            android:gravity="center"
                            android:text="Eventichs"
                            android:textSize="32dp" />

                        <Button
                            android:id="@+id/bouttonVersCréer"
                            android:layout_width="54dp"
                            android:layout_height="57dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/plus"
                            android:text="" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="278dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:gravity="center"
                    android:text="Mes événements"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/goToMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to maps" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="6dp"
                        android:src="@drawable/search" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingStart="10dp"
                        android:paddingEnd="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Search" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="50dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text=""
                        android:layout_marginStart="12dp"
                        android:background="@drawable/camera"
                        android:backgroundTint="@color/black"/>

                    <Button
                        android:id="@+id/bouttonVersDétail"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="5"
                        android:background="@drawable/rounded"
                        android:text="Événement 1"
                        android:textColor="@color/white"
                        app:cornerRadius="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="50dp"
                        android:layout_height="72dp"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/camera"
                        android:text="" />

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="5"
                        android:backgroundTint="@color/black"
                        android:text="Événement 2"
                        android:textColor="@color/white"
                        app:cornerRadius="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button13"
                        android:layout_width="50dp"
                        android:layout_height="72dp"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/camera"
                        android:text="" />

                    <Button
                        android:id="@+id/button14"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="5"
                        android:backgroundTint="@color/black"
                        android:text="Evenement 3"
                        android:textColor="@color/white"
                        app:cornerRadius="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button15"
                        android:layout_width="50dp"
                        android:layout_height="72dp"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/camera"
                        android:text="" />

                    <Button
                        android:id="@+id/button16"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="5"
                        android:backgroundTint="@color/black"
                        android:text="Evenement 4"
                        android:textColor="@color/white"
                        app:cornerRadius="0dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>